    "electron": "^2.0.6",
    "electron-packager": "^12.1.0",
    "electron-rebuild": "^1.8.2",
    "extract-text-webpack-plugin": "v4.0.0-alpha.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "usb": "^1.3.2"
  }
